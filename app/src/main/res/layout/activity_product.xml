<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:navigationIcon="@mipmap/ic_back_main"
        app:title="@string/detail"
        app:titleTextColor="@color/color_main"
        android:background="@color/color_white"/>

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:background="@color/color_white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kondisi_aplikasi"
                android:textSize="14sp"
                android:textColor="@color/color_4b4b4b"
                android:drawableLeft="@mipmap/ic_tiaojian"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tv_tiaojian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="@color/color_808080"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bahan_yang_dibutuhkan"
                android:textSize="14sp"
                android:textColor="@color/color_4b4b4b"
                android:drawableLeft="@mipmap/ic_cailiao"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tv_cailiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="@color/color_808080"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bahan_yang_dibutuhkan"
                android:textSize="14sp"
                android:textColor="@color/color_4b4b4b"
                android:drawableLeft="@mipmap/ic_shuoming"
                android:drawablePadding="8dp"/>

            <TextView
                android:id="@+id/tv_shuoming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                android:textColor="@color/color_808080"/>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="12dp"/>

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_logo"
                    android:layout_alignTop="@+id/iv_logo"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/color_4b4b4b"/>

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:layout_below="@+id/tv_product_name"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/color_808080"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_logo"
                    android:layout_below="@+id/tv_score"
                    android:textSize="12sp"
                    android:textColor="@color/color_808080"
                    android:layout_marginTop="6dp"
                    android:drawableLeft="@mipmap/ic_bank"
                    android:drawablePadding="6dp"
                    android:gravity="center_vertical"
                    android:text="@string/bank"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_gps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_bank"
                    android:layout_below="@+id/tv_score"
                    android:textSize="12sp"
                    android:textColorHint="@color/color_808080"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/ic_gps"
                    android:drawablePadding="6dp"
                    android:text="@string/indonesia"/>

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bank"
                    android:paddingLeft="12dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="24dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/color_main"
                    android:text="@string/product_detail"
                    android:drawableRight="@mipmap/ic_right_arrow_main"
                    android:drawablePadding="8dp"/>


            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_white"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_pay_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_4b4b4b"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/color_808080"
                            android:layout_marginTop="12dp"
                            android:text="@string/pembayaran"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_loan_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_4b4b4b"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/color_808080"
                            android:layout_marginTop="12dp"
                            android:text="@string/pinjaman"/>

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="28dp"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_rate_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/color_4b4b4b"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/color_808080"
                            android:layout_marginTop="12dp"
                            android:text="@string/bunga"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/sp_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_spinner_bg"
                        android:layout_weight="1"
                        android:layout_marginRight="8dp"/>

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/sp_day"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_spinner_bg"
                        android:layout_weight="1"
                        android:layout_marginLeft="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="52dp"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/loan_process"
                    android:textColor="@color/color_4b4b4b"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/loan_process1"
                    android:textSize="14sp"
                    android:textColor="@color/color_808080"
                    android:drawableLeft="@mipmap/ic_loan_process1"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/loan_process2"
                    android:textSize="14sp"
                    android:textColor="@color/color_808080"
                    android:drawableLeft="@mipmap/ic_loan_process2"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/loan_process3"
                    android:textSize="14sp"
                    android:textColor="@color/color_808080"
                    android:drawableLeft="@mipmap/ic_loan_process3"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/loan_process4"
                    android:textSize="14sp"
                    android:textColor="@color/color_808080"
                    android:drawableLeft="@mipmap/ic_loan_process4"
                    android:drawablePadding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:text="@string/loan_process5"
                    android:textSize="14sp"
                    android:textColor="@color/color_808080"
                    android:drawableLeft="@mipmap/ic_loan_process5"
                    android:drawablePadding="8dp" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tv_down"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_main"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:text="@string/down"
        android:visibility="gone"/>

</FrameLayout>